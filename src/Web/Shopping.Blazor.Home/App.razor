@using System.Reflection
<Router AppAssembly="@typeof(App).Assembly" AdditionalAssemblies="@LoadedAssemblies" PreferExactMatches="@true">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>
@code {
    /*
     * The code below and the Router tag above needs to be amended as well as a project reference to a razor library
     * then you can link to razor files in other libraries
     */
	private List<Assembly> LoadedAssemblies = new List<Assembly>()
	{
		typeof(Shopping.Blazor.Products.Products).Assembly
	};
}